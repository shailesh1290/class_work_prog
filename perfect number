#include <stdio.h>
#include <math.h>

int main()
{
    int n, i, j, sum;
    
    
    printf("Enter a number: ");
    scanf("%d", &n);
    
    printf("Perfect numbers between 1 and %d: ", n);
    
    
    for (i = 1; i <= n; i++)
    {
        sum = 0;
        
    
        for (j = 1; j < i; j++)
        {
            if (i % j == 0)
            {
                sum += j;
            }
        }
        
    
        if (sum == i)
        {
            printf("%d ", i);
        }
    }
    
    printf("\n");
    
    return 0;
}
