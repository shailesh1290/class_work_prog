#include <stdio.h>

int main() {
    int n, i, sum = 0,r,c;

    printf("Enter a positive integer: ");
    scanf("%d", &n);
c = n;

   while(n>0){
    r = n%10;
    sum = r+(sum*10);
    n = n/10;
   }
   if(c==sum){
    printf("palindrome :");
   }
   else{
    printf("not palindrome:");
   }
    return 0;
}
